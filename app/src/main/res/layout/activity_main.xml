<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/buttonAbove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/MenActivity"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/WomenActivity"
            android:visibility="visible" />

    </LinearLayout>

</android.support.design.widget.ConstraintLayout>
